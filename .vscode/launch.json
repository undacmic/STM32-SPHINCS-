{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/bin/program.elf",
            "request": "launch",
            "type": "cortex-debug",
            // Stop at the first CPU instruction
            "runToEntryPoint": "main",
            "device": "stm32g0",
            "servertype": "openocd",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "gdbPath": "gdb-multiarch",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32g0x.cfg"
            ],
            "preLaunchCommands": [
                "monitor program ${workspaceFolder}/build/bin/program.elf verify",
                "monitor mdw 0x20000028",
                "monitor reset halt",
                "monitor mdw 0x20000028"
            ],
            "internalConsoleOptions": "neverOpen",
        }
    ]
}